# ===========================================
# AIRRIDES PROJECT ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------
MONGO_URL=your_mongodb_connection_string_here

# -----------------------------------------
# PAYMENT GATEWAY (RAZORPAY)
# -----------------------------------------
# Secret key - BACKEND ONLY (never expose to frontend)
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Public key - Safe for frontend use
RAZORPAY_KEY_ID=your_razorpay_key_id_here
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here

# Webhook secret for verifying Razorpay webhook signatures
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# -----------------------------------------
# MASTER ADMIN CREDENTIALS (Backend Only)
# -----------------------------------------
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_admin_password_here

# -----------------------------------------
# SERVER CONFIGURATION (Backend)
# -----------------------------------------
SERVER_SECRET=your_jwt_secret_key_here_minimum_32_characters
NODE_ENV=development
PORT=4000

# -----------------------------------------
# API URLS (Frontend)
# -----------------------------------------
# For Vite projects (prefix with VITE_)
VITE_API_URL=http://localhost:4000
VITE_CLIENT_URL=http://localhost:5173

# Fallback for other build tools
REACT_APP_API_URL=http://localhost:4000
CLIENT_URL=http://localhost:5173
